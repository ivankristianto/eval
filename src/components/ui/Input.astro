---
/**
 * Input component for form fields with label and error handling
 *
 * @example
 * <Input name="email" label="Email Address" type="email" required />
 * <Input name="password" label="Password" type="password" error="Invalid password" />
 *
 * @param label - Label text displayed above the input
 * @param name - Input name attribute (required)
 * @param type - Input type attribute (default: 'text')
 * @param placeholder - Placeholder text
 * @param value - Input value
 * @param required - Whether the field is required (default: false)
 * @param disabled - Whether the field is disabled (default: false)
 * @param error - Error message to display below the input
 * @param class - Additional CSS classes to apply
 */
export interface Props {
  label?: string;
  name: string;
  type?: 'text' | 'password' | 'email' | 'number' | 'search' | 'url';
  placeholder?: string;
  value?: string | number;
  required?: boolean;
  disabled?: boolean;
  error?: string;
  class?: string;
}

const {
  label,
  name,
  type = 'text',
  placeholder,
  value,
  required = false,
  disabled = false,
  error,
  class: className = '',
  ...rest
} = Astro.props;

const inputClasses = ['input input-bordered w-full', error ? 'input-error' : '', className]
  .filter(Boolean)
  .join(' ');
---

<div class="form-control w-full">
  {
    label && (
      <label class="label" for={name}>
        <span class="label-text">
          {label} {required && <span class="text-error">*</span>}
        </span>
      </label>
    )
  }
  <input
    id={name}
    name={name}
    type={type}
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
    class={inputClasses}
    aria-describedby={error ? `${name}-error` : undefined}
    {...rest}
  />
  {
    error && (
      <label class="label">
        <span id={`${name}-error`} class="label-text-alt text-error">{error}</span>
      </label>
    )
  }
</div>
