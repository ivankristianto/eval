---
export interface Props {
  label?: string;
  name: string;
  type?: string;
  placeholder?: string;
  value?: string | number;
  error?: string;
  required?: boolean;
  class?: string;
  [key: string]: any;
}

const {
  label,
  name,
  type = 'text',
  placeholder,
  value,
  error,
  required = false,
  class: className = '',
  ...rest
} = Astro.props;

const inputClasses = [
  'input',
  'input-bordered',
  'w-full',
  error && 'input-error',
  className
].filter(Boolean).join(' ');
---

<label class="form-control w-full">
  {label && (
    <div class="label">
      <span class="label-text">{label}{required && <span class="text-error">*</span>}</span>
    </div>
  )}
  <input
    type={type}
    name={name}
    placeholder={placeholder}
    value={value}
    required={required}
    class={inputClasses}
    {...rest}
  />
  {error && (
    <div class="label">
      <span class="label-text-alt text-error">{error}</span>
    </div>
  )}
</label>
