---
import Button from './Button.astro';

/**
 * EmptyState component for displaying placeholder content
 *
 * @example
 * <EmptyState
 *   title="No evaluations found"
 *   description="Get started by creating your first evaluation"
 *   action={{ label: "Create Evaluation", href: "/new" }}
 * />
 *
 * @param title - Main heading text (required)
 * @param description - Descriptive text explaining the empty state (required)
 * @param icon - Optional SVG icon markup to display above title
 * @param action - Optional action button configuration
 */
export interface Props {
  title: string;
  description: string;
  icon?: string;
  action?: {
    label: string;
    href?: string;
    onClick?: string;
  };
}

const { title, description, icon, action } = Astro.props;
---

<div class="hero bg-base-200 rounded-box p-8 md:p-12 text-center">
  <div class="hero-content flex-col">
    {icon && <div class="mb-2" set:html={icon} />}
    <div class="max-w-md">
      <h1 class="text-2xl font-bold mb-2">{title}</h1>
      <p class="py-4 text-base-content/70">{description}</p>
      {
        action && (
          <Button variant="primary" href={action.href} onclick={action.onClick}>
            {action.label}
          </Button>
        )
      }
    </div>
  </div>
</div>
