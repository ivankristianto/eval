---
/**
 * Badge component for displaying status labels and metadata
 *
 * @example
 * <Badge variant="success" size="sm">Completed</Badge>
 * <Badge variant="warning" outline>Pending</Badge>
 *
 * @param variant - Visual style of the badge (default: 'neutral')
 * @param size - Size of the badge (default: 'md')
 * @param outline - Whether to use outline style (default: false)
 * @param class - Additional CSS classes to apply
 */
export interface Props {
  variant?:
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'ghost'
    | 'soft'
    | 'info'
    | 'success'
    | 'warning'
    | 'error'
    | 'neutral';
  size?: 'lg' | 'md' | 'sm' | 'xs';
  outline?: boolean;
  class?: string;
}

const { variant = 'neutral', size = 'md', outline = false, class: className = '' } = Astro.props;

const isStatus = ['success', 'warning', 'error', 'info'].includes(variant);
const classes = [
  'badge',
  `badge-${variant}`,
  `badge-${size}`,
  outline ? 'badge-outline' : '',
  isStatus ? 'font-mono font-semibold uppercase tracking-wide' : '',
  className,
]
  .filter(Boolean)
  .join(' ');
---

<span class={classes}>
  <slot />
</span>
