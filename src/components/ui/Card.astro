---
/**
 * Card component for grouping related content
 *
 * @example
 * <Card title="Evaluation Results">
 *   <p>Content goes here</p>
 * </Card>
 *
 * @param title - Optional card title with gradient styling
 * @param noPadding - Remove default padding from card body (default: false)
 * @param class - Additional CSS classes to apply
 */
export interface Props {
  title?: string;
  class?: string;
  noPadding?: boolean;
}

const { title, class: className = '', noPadding = false } = Astro.props;
---

<div class={`card-luxe ${className}`}>
  <div class={noPadding ? '' : 'p-6'}>
    {title && <h2 class="font-display text-2xl font-semibold mb-4 text-gradient-gold">{title}</h2>}
    <slot />
  </div>
</div>
