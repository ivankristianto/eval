---
import Button from './ui/Button.astro';
---

<div
  id="bulk-actions-bar"
  class="fixed bottom-6 left-1/2 transform -translate-x-1/2 z-50 transition-all duration-300 translate-y-24 opacity-0 pointer-events-none"
>
  <div
    class="bg-base-300 text-base-content px-6 py-3 rounded-full shadow-lg flex items-center gap-4 border border-base-content/10"
  >
    <span id="bulk-count" class="font-medium">0 selected</span>
    <div class="h-4 w-px bg-base-content/20"></div>
    <Button variant="ghost" size="sm" class="text-error" id="bulk-delete-trigger"> Delete </Button>
    <Button variant="ghost" size="sm" id="bulk-cancel-btn"> Cancel </Button>
  </div>
</div>
