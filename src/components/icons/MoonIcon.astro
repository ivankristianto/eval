---
/**
 * Moon icon component
 *
 * @param size - Icon size (default: 'md')
 * @param class - Additional CSS classes
 */
export interface Props {
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}

const sizeClasses = {
  xs: 'w-3 h-3',
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6',
  xl: 'w-8 h-8',
};

const { size = 'md', class: className = '' } = Astro.props;
const classes = `${sizeClasses[size]} ${className}`;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  class={classes}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
</svg>
