---
import Drawer from './ui/Drawer.astro';
---

<Drawer id="details-drawer" width="md">
  <Fragment slot="title">
    <h2 class="font-display text-2xl font-semibold text-gradient-gold" id="details-drawer-title">
      Evaluation Details
    </h2>
  </Fragment>

  <!-- Content -->
  <div class="space-y-6">
    <!-- Full Prompt -->
    <div>
      <h3 class="text-sm font-semibold text-base-content/70 mb-2">Full Prompt:</h3>
      <div id="details-prompt" class="bg-base-200 p-3 rounded-lg text-sm whitespace-pre-wrap"></div>
    </div>

    <!-- Expected Output -->
    <div>
      <h3 class="text-sm font-semibold text-base-content/70 mb-2">Expected Output:</h3>
      <div id="details-expected" class="bg-base-200 p-3 rounded-lg text-sm font-mono"></div>
    </div>

    <!-- Response -->
    <div>
      <h3 class="text-sm font-semibold text-base-content/70 mb-2">Response:</h3>
      <div
        id="details-response"
        class="bg-base-200 p-3 rounded-lg text-sm font-mono whitespace-pre-wrap"
      >
      </div>
    </div>

    <!-- Reasoning -->
    <div>
      <h3 class="text-sm font-semibold text-base-content/70 mb-2">Reasoning:</h3>
      <div id="details-reasoning" class="bg-base-200 p-3 rounded-lg text-sm"></div>
    </div>

    <!-- Metrics -->
    <div>
      <h3 class="text-sm font-semibold text-base-content/70 mb-2">Metrics:</h3>
      <div class="grid grid-cols-2 gap-3">
        <div class="bg-base-200 p-3 rounded-lg">
          <div class="text-xs text-base-content/50">Execution Time</div>
          <div class="font-semibold" id="details-time">-</div>
        </div>
        <div class="bg-base-200 p-3 rounded-lg">
          <div class="text-xs text-base-content/50">Accuracy Score</div>
          <div class="font-semibold" id="details-accuracy">-</div>
        </div>
        <div class="bg-base-200 p-3 rounded-lg">
          <div class="text-xs text-base-content/50">Temperature</div>
          <div class="font-semibold font-mono" id="details-temperature">-</div>
        </div>
        <div class="bg-base-200 p-3 rounded-lg">
          <div class="text-xs text-base-content/50">Total Tokens</div>
          <div class="font-semibold" id="details-total-tokens">-</div>
        </div>
        <div class="bg-base-200 p-3 rounded-lg">
          <div class="text-xs text-base-content/50">Input Tokens</div>
          <div class="font-semibold" id="details-input-tokens">-</div>
        </div>
        <div class="bg-base-200 p-3 rounded-lg">
          <div class="text-xs text-base-content/50">Output Tokens</div>
          <div class="font-semibold" id="details-output-tokens">-</div>
        </div>
      </div>
    </div>
  </div>
</Drawer>

<script>
  function initEvaluationDetailsDrawer() {
    // Populate drawer with data
    function showDetails(data: {
      modelName: string;
      prompt: string;
      expectedOutput: string;
      response: string;
      reasoning: string;
      executionTime?: number;
      accuracyScore?: number;
      inputTokens?: number;
      outputTokens?: number;
      totalTokens?: number;
      temperature?: number;
    }) {
      // Update title
      const title = document.getElementById('details-drawer-title');
      if (title) title.textContent = `Evaluation Details: ${data.modelName}`;

      // Update content
      const promptEl = document.getElementById('details-prompt');
      const expectedEl = document.getElementById('details-expected');
      const responseEl = document.getElementById('details-response');
      const reasoningEl = document.getElementById('details-reasoning');
      const timeEl = document.getElementById('details-time');
      const accuracyEl = document.getElementById('details-accuracy');
      const temperatureEl = document.getElementById('details-temperature');
      const totalTokensEl = document.getElementById('details-total-tokens');
      const inputTokensEl = document.getElementById('details-input-tokens');
      const outputTokensEl = document.getElementById('details-output-tokens');

      if (promptEl) promptEl.textContent = data.prompt || '-';
      if (expectedEl) expectedEl.textContent = data.expectedOutput || '-';
      if (responseEl) responseEl.textContent = data.response || '-';
      if (reasoningEl) reasoningEl.textContent = data.reasoning || '-';
      if (timeEl) timeEl.textContent = data.executionTime ? `${data.executionTime}ms` : '-';
      if (accuracyEl)
        accuracyEl.textContent = data.accuracyScore !== undefined ? `${data.accuracyScore}%` : '-';
      if (temperatureEl) {
        const temp = data.temperature !== undefined ? data.temperature : 0.3;
        const isDefault = temp === 0.3 || data.temperature === undefined;
        temperatureEl.textContent = `${temp.toFixed(1)}${isDefault ? ' (default)' : ''}`;
      }
      if (totalTokensEl) totalTokensEl.textContent = data.totalTokens?.toString() || '-';
      if (inputTokensEl) inputTokensEl.textContent = data.inputTokens?.toString() || '-';
      if (outputTokensEl) outputTokensEl.textContent = data.outputTokens?.toString() || '-';

      // Open drawer using the window function provided by Drawer component
      if ((window as any).openDrawer) {
        (window as any).openDrawer('details-drawer');
      }
    }

    // Expose to window
    (window as any).showEvaluationDetails = showDetails;
  }

  // Initialize
  initEvaluationDetailsDrawer();

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initEvaluationDetailsDrawer);
</script>
