---
import '../styles/global.css';
import { getEvaluations, getResults, getTemplateById } from '../lib/db';

// Get query params
const url = Astro.url;
const templateId = url.searchParams.get('template');

// Get evaluations
let evaluations: Array<{
  id: string;
  instruction_text: string;
  accuracy_rubric: string;
  status: string;
  created_at: string;
  completed_at?: string;
  template_name?: string;
  best_accuracy?: number;
  fastest_model?: { model_name: string; execution_time_ms: number };
  result_count: number;
}> = [];

let templateName = '';

try {
  const rawEvaluations = getEvaluations(templateId || undefined, 50, 0);

  if (templateId) {
    const template = getTemplateById(templateId);
    if (template) {
      templateName = template.name;
    }
  }

  evaluations = rawEvaluations.map(e => {
    const results = getResults(e.id);
    const completedResults = results.filter(r => r.status === 'completed');

    let bestAccuracy: number | undefined;
    let fastestModel: { model_name: string; execution_time_ms: number } | undefined;

    if (completedResults.length > 0) {
      const best = completedResults.reduce((a, b) =>
        (a.accuracy_score || 0) > (b.accuracy_score || 0) ? a : b
      );
      bestAccuracy = best.accuracy_score;

      const fastest = completedResults.reduce((a, b) =>
        (a.execution_time_ms || Infinity) < (b.execution_time_ms || Infinity) ? a : b
      );
      if (fastest.execution_time_ms !== undefined) {
        fastestModel = {
          model_name: fastest.model_name,
          execution_time_ms: fastest.execution_time_ms
        };
      }
    }

    return {
      id: e.id,
      instruction_text: e.instruction_text.substring(0, 100),
      accuracy_rubric: e.accuracy_rubric,
      status: e.status,
      created_at: e.created_at,
      completed_at: e.completed_at,
      best_accuracy: bestAccuracy,
      fastest_model: fastestModel,
      result_count: results.length
    };
  });
} catch {
  // Database may not be initialized
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Evaluation History - AI Model Evaluation Framework</title>
</head>
<body class="bg-gray-50 min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <header class="mb-8">
      <nav class="flex items-center gap-6 mb-4">
        <a href="/" class="text-blue-600 hover:text-blue-800">Home</a>
        <span class="text-gray-400">/</span>
        <a href="/templates" class="text-blue-600 hover:text-blue-800">Templates</a>
        <span class="text-gray-400">/</span>
        <span class="text-gray-900 font-medium">History</span>
      </nav>
      <h1 class="text-3xl font-bold text-gray-900">
        {templateName ? `History: ${templateName}` : 'Evaluation History'}
      </h1>
      <p class="mt-2 text-gray-600">
        {templateId
          ? 'Historical evaluations for this template.'
          : 'All past evaluation runs and their results.'
        }
      </p>
    </header>

    <!-- Filters -->
    {!templateId && (
      <div class="mb-6 flex gap-4">
        <a href="/history" class="btn-secondary">All Evaluations</a>
      </div>
    )}

    <!-- History List -->
    <div class="bg-white shadow rounded-lg">
      {evaluations.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="results-table">
            <thead>
              <tr>
                <th>Instruction</th>
                <th>Rubric</th>
                <th>Models</th>
                <th>Best Accuracy</th>
                <th>Fastest Model</th>
                <th>Status</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {evaluations.map(evaluation => (
                <tr>
                  <td class="max-w-xs">
                    <div class="truncate text-sm" title={evaluation.instruction_text}>
                      {evaluation.instruction_text}
                    </div>
                  </td>
                  <td>
                    <span class="text-xs bg-gray-100 px-2 py-1 rounded">
                      {evaluation.accuracy_rubric.replace('_', ' ')}
                    </span>
                  </td>
                  <td>{evaluation.result_count}</td>
                  <td>
                    {evaluation.best_accuracy !== undefined ? (
                      <span class="font-semibold text-green-600">{evaluation.best_accuracy}%</span>
                    ) : '-'}
                  </td>
                  <td>
                    {evaluation.fastest_model ? (
                      <div class="text-sm">
                        <div class="font-medium">{evaluation.fastest_model.model_name}</div>
                        <div class="text-gray-500">{evaluation.fastest_model.execution_time_ms}ms</div>
                      </div>
                    ) : '-'}
                  </td>
                  <td>
                    <span class={`status-${evaluation.status}`}>
                      {evaluation.status}
                    </span>
                  </td>
                  <td class="text-sm text-gray-500">
                    {new Date(evaluation.created_at).toLocaleString()}
                  </td>
                  <td>
                    <a
                      href={`/?evaluation=${evaluation.id}`}
                      class="text-blue-600 hover:text-blue-800 text-sm font-medium"
                    >
                      View
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="text-center py-12 text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="mt-4">No evaluation history yet.</p>
          <p class="text-sm">Run some evaluations to see them here.</p>
          <a href="/" class="btn-primary mt-4 inline-block">Go to Evaluate</a>
        </div>
      )}
    </div>
  </div>
</body>
</html>
